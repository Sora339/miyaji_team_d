datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Questions {
  id       Int       @id @default(autoincrement())
  content  String?
  is_adult Boolean   @map("is_adult") // is_adultにマッピング
  options  Options[]

  @@map("questions")
}

model Options {
  id         Int       @id @default(autoincrement())
  questionId Int
  question   Questions @relation(fields: [questionId], references: [id])
  content    String

  @@map("options")
}

model Results {
  id         Int    @id @default(autoincrement())
  answer     Int?   @map("answer_id") // answersは単数形のanswerに修正、マッピングをanswer_idに
  
  @@map("results")
}